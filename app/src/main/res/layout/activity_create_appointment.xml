<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_morado"
    tools:context=".CreateAppointment">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar cita"
            android:textSize="23sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/bebasneue_regular"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"/>


        <Button
            android:id="@+id/btn_reservar_cita"
            android:layout_width="match_parent"
            android:text="Reservar Cita"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/ic_post_add"
            style="@style/MenuButtom"/>

        <Button
            android:layout_width="match_parent"
            android:text="Mis Citas"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/ic_calendar"
            style="@style/MenuButtom"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:text="Cerrar Sesion"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/ic_logout"
            style="@style/MenuButtom"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>